@using Finote_Web.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Log in";
    // Use the new, simpler auth layout
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-card">
    <div class="auth-header">
        <h2><i class="fas fa-leaf"></i> Welcome Back!</h2>
        <p>Sign in to continue to Finote Admin</p>
    </div>

    <form asp-action="Login" asp-controller="Account" method="post">
        @Html.AntiForgeryToken()
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger" style="color: #721c24; background-color: #f8d7da; border-color: #f5c6cb; padding: 10px; border-radius: 5px; margin-bottom: 15px;">
                <div asp-validation-summary="ModelOnly"></div>
            </div>
        }
        <div class="form-group">
            <label asp-for="Email">Email Address or Username</label>
            <input asp-for="Email" class="form-control" placeholder="Enter your email" required>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" placeholder="Enter your password" required>
        </div>

 

        <button type="submit" class="btn-submit">Log In</button>
    </form>
</div>