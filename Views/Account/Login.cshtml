@using Finote_Web.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Log in";
    // Use the new, simpler auth layout
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-card">
    <div class="auth-header">
        <h2><i class="fas fa-leaf"></i> Welcome Back!</h2>
        <p>Sign in to continue to Finote Admin</p>
    </div>

    <form asp-action="Login" asp-controller="Account" method="post">
        <div class="form-group">
            <label asp-for="Email">Email Address</label>
            <input asp-for="Email" class="form-control" placeholder="Enter your email" required>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" placeholder="Enter your password" required>
        </div>

        <div class="form-options">
            <div class="form-check">
                <input type="checkbox" id="rememberMe">
                <label for="rememberMe">Remember me</label>
            </div>
            <a asp-action="ForgotPassword" class="auth-link">Forgot password?</a>
        </div>

        <button type="submit" class="btn-submit">Log In</button>
    </form>
</div>