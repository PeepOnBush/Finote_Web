@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-card">
    <div class="auth-header">
        <h2>Forgot Password?</h2>
        <p>Enter your email and we'll send you a reset link.</p>
    </div>

    <form asp-action="Login" asp-controller="Account">
        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" class="form-control" placeholder="Enter your registered email" required>
        </div>

        <button type="submit" class="btn-submit">Send Reset Link</button>

        <div class="auth-footer">
            <a asp-action="Login" class="auth-link"><i class="fas fa-arrow-left"></i> Back to Login</a>
        </div>
    </form>
</div>