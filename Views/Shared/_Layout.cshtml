<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Finote_Web</title>

    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />

    <!-- Link to your new CSS file -->
    <link rel="stylesheet" href="@Url.Content("~/css/dashboard.css")" asp-append-version="true">
</head>
<body>
    <!-- ==================== SIDEBAR ==================== -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <h3><i class="fas fa-leaf"></i> Finote Admin</h3>
        </div>
        <ul class="sidebar-nav">
            @{
                string currentPage = ViewData["CurrentPage"] as string ?? "";
            }

            <li class="sidebar-nav-item @(currentPage == "Dashboard" ? "active" : "")">
                <a asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i><span>Overview</span></a>
            </li>
            <li class="sidebar-nav-item @(currentPage == "AccountManagement" ? "active" : "")">
                <a asp-controller="Home" asp-action="AccountManagement"><i class="fas fa-users-cog"></i><span>Account Management</span></a>
            </li>
            <li class="sidebar-nav-item @(currentPage == "TransactionManagement" ? "active" : "")">
                <a asp-controller="Home" asp-action="TransactionManagement"><i class="fas fa-exchange-alt"></i><span>Transaction Management</span></a>
            </li>
            <li class="sidebar-nav-item @(currentPage == "Statistics" ? "active" : "")">
                <a class="sidebar-dropdown-toggle" href="#"><i class="fas fa-chart-bar"></i><span>Statistics & Reports</span><i class="fas fa-chevron-right dropdown-arrow"></i></a>
                <ul class="sidebar-dropdown-menu">
                    <li><a asp-controller="Home" asp-action="ReportUsers">User Reports</a></li>
                    <li><a asp-controller="Home" asp-action="ReportNotesWallets">Notes and wallets Reports</a></li>
                    <li><a asp-controller="Home" asp-action="ReportAiUsage">AI usage Reports</a></li>
                </ul>
            </li>
            <li class="sidebar-nav-item @(currentPage == "Permissions" ? "active" : "")">
                <a asp-controller="Home" asp-action="Permissions"><i class="fas fa-shield-alt"></i><span>Authorization & Security</span></a>
            </li>
            <li class="sidebar-nav-item @(currentPage == "Settings" ? "active" : "")">
                <a asp-controller="Home" asp-action="Settings"><i class="fas fa-cog"></i><span>System Settings</span></a>
            </li>
        </ul>
        <div class="sidebar-footer">
            <a asp-controller="Account" asp-action="Login" class="logout-btn"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
        </div>
    </aside>

    <!-- ==================== MAIN CONTENT ==================== -->
    <div class="main-content">
        <header class="top-navbar">
            <div class="menu-toggle"><i class="fas fa-bars"></i></div>
            <div class="user-info"><i class="fas fa-bell"></i><i class="fas fa-cog"></i><img src="https://i.pravatar.cc/40" alt="User Avatar" class="avatar"></div>
        </header>

        <!-- This is where the content of each individual page will be rendered -->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- link cho biểu đồ -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Link to your JS file -->
    <script src="@Url.Content("~/js/site.js")" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>