@model Finote_Web.ViewModels.SettingsViewModel
@{
    ViewData["Title"] = "System Settings";
}

<main>
    <div class="page-header">
        <h1>Trang Cấu Hình</h1>
        <p>Configuration Page</p>
    </div>

    <!-- Display success/error messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="content-card">
        <nav class="tab-nav">
            <button class="tab-link active" data-tab="system">Cấu hình hệ thống</button>
            <button class="tab-link" data-tab="backup">Backup dữ liệu</button>
            @* <button class="tab-link" data-tab="notify">Gửi thông báo (email)</button> *@
        </nav>

        <div class="tab-content active" id="system">
            <h4>System Configuration</h4>
            @if (string.IsNullOrEmpty(Model.ApiKey))
            {
                <div class="api-key-empty">
                    <i class="fas fa-exclamation-triangle"></i>
                    <p>API Key is empty. Please generate a new key.</p>
                </div>
            }

            <form asp-action="UpdateApiKey" method="post" class="settings-form">
                <div class="form-group">
                    <label>External API Key</label>
                    <input type="password" name="apiKey" class="form-control" value="@Model.ApiKey" placeholder="Enter a new key or generate one" />
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn-primary">Save / Create Key</button>
                    <!-- This button will open the delete confirmation modal -->
                    <button type="button" id="deleteKeyBtn" class="btn-danger" @(string.IsNullOrEmpty(Model.ApiKey) ? "disabled" : "")>
                        Delete Key
                    </button>
                </div>
            </form>
        </div>
        <!-- Tab 2: Data Backup -->
        <div class="tab-content" id="backup">
            <h4>Data Backup</h4>
            <p>Create and download a full backup of the database.</p>
            <div class="backup-section">
                @if (Model.LastBackupDate.HasValue)
                {
                    <!-- This will now display the real, updated time -->
                    <p><strong>Last Backup:</strong> @Model.LastBackupDate.Value.ToLocalTime().ToString("g")</p>
                }
                else
                {
                    <p><strong>Last Backup:</strong> Never</p>
                }

                <form asp-action="CreateDatabaseBackup" method="post"
                      onsubmit="return confirm('This will create a new backup of the entire database. Continue?');">
                    <button type="submit" class="btn-primary"><i class="fas fa-download"></i> Create and Download Backup</button>
                </form>
            </div>
        </div>
        @* <!-- Notif tab -->
        <div class="tab-content" id="notify">
            <h4>Send Notification Email</h4>
            <p>Send an email to a specific user or all users.</p>
            <form asp-action="SendNotification" method="post" class="settings-form">
                <div class="form-group">
                    <label for="recipient">Recipient</label>
                    <input type="text" name="recipient" class="form-control" placeholder="user@example.com or 'All'">
                </div>
                <div class="form-group">
                    <label for="subject">Subject</label>
                    <input type="text" name="subject" class="form-control">
                </div>
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea name="message" class="form-control" rows="5"></textarea>
                </div>
                <button type="submit" class="btn-primary">Send Notification</button>
            </form>
        </div> *@
    </div>
</main>

<!-- =================================================== -->
<!-- =========== DELETE KEY CONFIRMATION MODAL ========= -->
<!-- =================================================== -->
<div id="deleteKeyModal" class="modal">
    <div class="modal-content" style="max-width: 500px;">
        <div class="modal-header">
            <h2>Confirm API Key Deletion</h2>
            <span class="close-btn">&times;</span>
        </div>
        <div class="modal-body">
            <p>This is a destructive action. To proceed, please enter your password to confirm you want to clear the API key.</p>
            <form asp-action="DeleteApiKey" method="post">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Your Password</label>
                    <input asp-for="ConfirmPassword" class="form-control" required />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn-danger">Confirm & Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const deleteKeyModal = document.getElementById('deleteKeyModal');
            const deleteKeyBtn = document.getElementById('deleteKeyBtn');
            const closeBtn = deleteKeyModal.querySelector('.close-btn');
            const cancelBtn = deleteKeyModal.querySelector('[data-dismiss="modal"]');

            if (deleteKeyBtn) {
                 deleteKeyBtn.addEventListener('click', () => { deleteKeyModal.style.display = 'block'; });
            }
            if (closeBtn) {
                 closeBtn.addEventListener('click', () => { deleteKeyModal.style.display = 'none'; });
            }
            if (cancelBtn) {
                 cancelBtn.addEventListener('click', () => { deleteKeyModal.style.display = 'none'; });
            }
            window.addEventListener('click', (e) => {
                if (e.target == deleteKeyModal) { deleteKeyModal.style.display = 'none'; }
            });
        });
    </script>
}