@model Finote_Web.ViewModels.SettingsViewModel
@{
    ViewData["Title"] = "System Settings";
}

<main>
    <div class="page-header">
        <h1>Trang Cấu Hình</h1>
        <p>Configuration Page</p>
    </div>

    <!-- Display success/error messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="content-card">
        <nav class="tab-nav">
            <button class="tab-link active" data-tab="system">Cấu hình hệ thống</button>
            <button class="tab-link" data-tab="backup">Backup dữ liệu</button>
            @* <button class="tab-link" data-tab="notify">Gửi thông báo (email)</button> *@
        </nav>

        <div class="tab-content active" id="system">
            <h4>System Configuration</h4>
            @if (string.IsNullOrEmpty(Model.ApiKey))
            {
                <div class="api-key-empty">
                    <i class="fas fa-exclamation-triangle"></i>
                    <p>API Key is empty. Please generate a new key.</p>
                </div>
            }

            <form asp-action="UpdateApiKey" method="post" class="settings-form">
                <div class="form-group">
                    <label>External API Key</label>
                    <input type="password" name="apiKey" class="form-control" value="@Model.ApiKey" placeholder="Enter a new key or generate one" />
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn-primary">Save / Create Key</button>
                    <!-- This button will open the delete confirmation modal -->
                    <button type="button" id="deleteKeyBtn" class="btn-danger" @(string.IsNullOrEmpty(Model.ApiKey) ? "disabled" : "")>
                        Delete Key
                    </button>
                </div>
            </form>
        </div>
        <!-- Tab 2: Data Backup -->
        <div class="tab-content" id="backup">
            <h4>Data Backup</h4>
            <p>Create and download a full backup of the database.</p>
            <div class="backup-section">
                <p>
                    <strong>Last Backup:</strong>
                    <!-- ===== THIS ID MUST EXIST FOR JS TO WORK ===== -->
                    <span id="lastBackupDate">
                        @(Model.LastBackupDate.HasValue? Model.LastBackupDate.Value.ToLocalTime().ToString("g") : "Never")
                    </span>
                    <!-- ============================================= -->
                </p>

                <!-- The Button -->
                <button type="button" id="createBackupBtn" class="btn-primary">
                    <i class="fas fa-download"></i> Create and Download Backup
                </button>

                <!-- The Status Message Area -->
                <span id="backupStatus" style="margin-left: 1rem;"></span>
            </div>
            <hr style="margin: 2rem 0; border-top: 1px solid #eee;">

            <h5>Backup History (Server Files)</h5>
            <div class="table-wrapper">
                <table>
                    <thead>
                        <tr>
                            <th>File Name</th>
                            <th>Date Created</th>
                            <th>Size</th>
                            <th>Action</th>
                            <!-- Optional: Add Action column if we implement download later -->
                        </tr>
                    </thead>
                    <tbody id="backupTableBody">
                        @if (Model.BackupHistory.Any())
                        {
                            @foreach (var file in Model.BackupHistory)
                            {
                                <tr>
                                    <td>@file.FileName</td>
                                    <td>@file.CreatedAt.ToString("g")</td>
                                    <td>@file.Size</td>
                                    <td>
                                        <!-- ===== THE SYNC BUTTON ===== -->
                                        <button type="button" class="btn-success sync-db-btn"
                                                data-filename="@file.FileName">
                                            <i class="fas fa-sync-alt"></i> Sync
                                        </button>
                                        <!-- =========================== -->
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <!-- ===== ADD CLASS HERE ===== -->
                            <tr class="no-files-row">
                                <td colspan="3" style="text-align:center; color:#777;">No backup files found on server.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        </div>
        @* <!-- Notif tab -->
        <div class="tab-content" id="notify">
            <h4>Send Notification Email</h4>
            <p>Send an email to a specific user or all users.</p>
            <form asp-action="SendNotification" method="post" class="settings-form">
                <div class="form-group">
                    <label for="recipient">Recipient</label>
                    <input type="text" name="recipient" class="form-control" placeholder="user@example.com or 'All'">
                </div>
                <div class="form-group">
                    <label for="subject">Subject</label>
                    <input type="text" name="subject" class="form-control">
                </div>
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea name="message" class="form-control" rows="5"></textarea>
                </div>
                <button type="submit" class="btn-primary">Send Notification</button>
            </form>
        </div> *@
    </div>
</main>

<!-- =================================================== -->
<!-- =========== DELETE KEY CONFIRMATION MODAL ========= -->
<!-- =================================================== -->
<div id="deleteKeyModal" class="modal">
    <div class="modal-content" style="max-width: 500px;">
        <div class="modal-header">
            <h2>Confirm API Key Deletion</h2>
            <span class="close-btn">&times;</span>
        </div>
        <div class="modal-body">
            <p>This is a destructive action. To proceed, please enter your password to confirm you want to clear the API key.</p>
            <form asp-action="DeleteApiKey" method="post">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Your Password</label>
                    <input asp-for="ConfirmPassword" class="form-control" required />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn-danger">Confirm & Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- =================================================== -->
<!-- ============ FORCE LOGOUT MODAL =================== -->
<!-- =================================================== -->
<div id="forceLogoutModal" class="modal-overlay-blur">
    <div class="modal-box-center">
        <div style="text-align: center;">
            <i class="fas fa-check-circle" style="font-size: 3rem; color: #28a745; margin-bottom: 1rem;"></i>
            <h3>Database Restored Successfully</h3>
            <p style="margin: 1rem 0; color: #555;">
                The system data has been updated. <br>
                <strong>You have to login again to continue.</strong>
            </p>

            <!-- This button redirects to Login -->
            <a href="@Url.Action("Login", "Account")" class="btn-primary" style="display: inline-block; width: 100%; text-decoration: none;">
                <i class="fas fa-sign-out-alt"></i> Logout & Login
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            // ===================================================
            // =========== DELETE KEY MODAL LOGIC ================
            // ===================================================
            const deleteKeyModal = document.getElementById('deleteKeyModal');
            const deleteKeyBtn = document.getElementById('deleteKeyBtn');
            const closeBtn = deleteKeyModal.querySelector('.close-btn');
            const cancelBtn = deleteKeyModal.querySelector('[data-dismiss="modal"]');

            if (deleteKeyBtn) {
                 deleteKeyBtn.addEventListener('click', () => { deleteKeyModal.style.display = 'block'; });
            }
            if (closeBtn) {
                 closeBtn.addEventListener('click', () => { deleteKeyModal.style.display = 'none'; });
            }
            if (cancelBtn) {
                 cancelBtn.addEventListener('click', () => { deleteKeyModal.style.display = 'none'; });
            }
            window.addEventListener('click', (e) => {
                if (e.target == deleteKeyModal) { deleteKeyModal.style.display = 'none'; }
            });


            // ===================================================
            // =========== BACKUP & DOWNLOAD LOGIC ===============
            // ===================================================
            const backupButton = document.getElementById('createBackupBtn');
            const statusSpan = document.getElementById('backupStatus');
            const lastBackupDateSpan = document.getElementById('lastBackupDate');
            const backupTableBody = document.getElementById('backupTableBody');

            if (backupButton) {
                backupButton.addEventListener('click', function() {

                    if (!confirm('This will create a new backup of the entire database. Continue?')) {
                        return;
                    }

                    // 1. UI Feedback
                    backupButton.disabled = true;
                    statusSpan.textContent = 'Creating backup...';
                    statusSpan.style.color = 'blue';

                    // 2. AJAX Request
                    fetch('@Url.Action("CreateDatabaseBackup", "Home")', {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    })
                    .then(response => {
                        if (!response.ok) {
                            return response.json().then(err => { throw new Error(err.message); });
                        }
                        return response.json();
                    })
                    .then(data => {
                        // 3. Trigger Download
                        const byteCharacters = atob(data.fileContents);
                        const byteNumbers = new Array(byteCharacters.length);
                        for (let i = 0; i < byteCharacters.length; i++) {
                            byteNumbers[i] = byteCharacters.charCodeAt(i);
                        }
                        const byteArray = new Uint8Array(byteNumbers);
                        const blob = new Blob([byteArray], { type: 'application/octet-stream' });

                        const link = document.createElement('a');
                        link.href = URL.createObjectURL(blob);
                        link.download = data.fileName;
                        document.body.appendChild(link);
                        link.click();
                        document.body.removeChild(link);

                        // 4. Update UI Text
                        lastBackupDateSpan.textContent = data.newBackupDate;
                        statusSpan.textContent = 'Backup successful!';
                        statusSpan.style.color = 'green';

                        // 5. Update Table List Real-Time
                        // Remove "No files" row if it exists
                        const noFilesRow = backupTableBody.querySelector('.no-files-row');
                        if (noFilesRow) {
                            noFilesRow.remove();
                        }

                        // Create new row
                        const newRow = document.createElement('tr');
                        newRow.classList.add('new-row-highlight'); // For CSS animation
                        newRow.innerHTML = `
                            <td>${data.fileName}</td>
                            <td>${data.newBackupDate}</td>
                            <td>${data.fileSize}</td>
                        `;

                        // Insert at top
                        backupTableBody.insertBefore(newRow, backupTableBody.firstChild);
                    })
                    .catch(error => {
                        console.error('Backup failed:', error);
                        statusSpan.textContent = `Error: ${error.message}`;
                        statusSpan.style.color = 'red';
                    })
                    .finally(() => {
                        backupButton.disabled = false;
                        setTimeout(() => { statusSpan.textContent = ''; }, 5000);
                    });
                });
            }
                // ============================================
            // =========== SYNC DATABASE LOGIC ============
            // ============================================
            const syncButtons = document.querySelectorAll('.sync-db-btn');
            const forceLogoutModal = document.getElementById('forceLogoutModal');

            syncButtons.forEach(btn => {
                btn.addEventListener('click', function() {
                    const fileName = this.getAttribute('data-filename');

                    if (!confirm('DANGER: This will OVERWRITE the current database with this backup. Current data will be lost. Are you sure?')) {
                        return;
                    }

                    // 1. Disable button and show loading state
                    const originalText = this.innerHTML;
                    this.disabled = true;
                    this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Restoring...';

                    // 2. Make AJAX request
                    fetch('@Url.Action("RestoreDatabase", "Home")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: `fileName=${encodeURIComponent(fileName)}`
                    })
                    .then(response => {
                        if (response.ok) {
                            // 3. SUCCESS: Show the blur modal
                            forceLogoutModal.style.display = 'flex'; // 'flex' enables the centering
                        } else {
                            return response.json().then(err => { throw new Error(err.message); });
                        }
                    })
                    .catch(error => {
                        alert('Restore Failed: ' + error.message);
                        // Reset button
                        this.disabled = false;
                        this.innerHTML = originalText;
                    });
                });
            });
        });
    </script>
}