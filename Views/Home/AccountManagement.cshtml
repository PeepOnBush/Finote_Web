@model Finote_Web.ViewModels.AccountManagementViewModel
@{
    ViewData["Title"] = "Account Management";
}

<main>
    <div class="page-header">
        <h1>Account Management</h1>
        <p>Manage user accounts, roles, and permissions.</p>
    </div>

    <div class="content-card">
        <div class="toolbar">
            <!-- WRAP IN FORM -->
            <form asp-action="AccountManagement" method="get" class="search-wrapper">
                <!-- Add name="searchString" and value="@ViewData["CurrentFilter"]" -->
                <input type="search" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Search by name or email..." onchange="this.form.submit()">
            </form>

            <button id="addUserBtn" class="btn-primary"><i class="fas fa-plus"></i> Add New User</button>
        </div>

        <div class="table-wrapper">
            <!-- The table remains the same -->
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>USER</th>
                        <th>EMAIL</th>
                        <th>ROLE</th>
                        <th>ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>
                                <span style="font-size: 0.8rem; color: #777;">@user.Id.Substring(0, 8)...</span>
                            </td>
                            <td>
                                <div class="user-profile">
                                    <span>@user.FullName</span>
                                </div>
                            </td>
                            <td>@user.Email</td>
                            <td><span class="role-badge role-@(user.Role.ToLower())">@user.Role</span></td>
                            <td class="actions-cell">
                                <a href="#" class="action-btn edit-user-btn" data-id="@user.Id" title="Update"><i class="fas fa-pencil-alt"></i></a>
                                <a href="#" class="action-btn details-user-btn" data-id="@user.Id" title="Details"><i class="fas fa-eye"></i></a>


                                <!-- ===== THIS IS THE FIX for the DELETE button ===== -->
                                <!-- The form is now the button itself -->
                                <form asp-action="DeleteUser" asp-controller="Home" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="action-btn delete-btn-style" title="Delete"
                                            onclick="return confirm('Are you sure you want to delete the user @user.FullName?');">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                                <!-- ============================================== -->
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>

<!-- =================================================== -->
<!-- ============= ADD NEW USER MODAL ================== -->
<!-- =================================================== -->
<div id="addUserModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Add New User</h2>
            <span class="close-btn">&times;</span>
        </div>
        <div class="modal-body">
            <form asp-action="CreateUser" asp-controller="Home" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="NewUser.UserName"></label>
                        <input asp-for="NewUser.UserName" class="form-control" />
                        <span asp-validation-for="NewUser.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewUser.Email"></label>
                        <input asp-for="NewUser.Email" class="form-control" />
                        <span asp-validation-for="NewUser.Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="NewUser.Password"></label>
                        <input asp-for="NewUser.Password" class="form-control" required />
                        <span asp-validation-for="NewUser.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewUser.ConfirmPassword"></label>
                        <input asp-for="NewUser.ConfirmPassword" class="form-control" required />
                        <span asp-validation-for="NewUser.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="NewUser.FullName"></label>
                        <input asp-for="NewUser.FullName" class="form-control" />
                        <span asp-validation-for="NewUser.FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewUser.PhoneNumber"></label>
                        <input asp-for="NewUser.PhoneNumber" class="form-control" />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="NewUser.Gender"></label>
                        <input asp-for="NewUser.Gender" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="NewUser.DateOfBirth"></label>
                        <input asp-for="NewUser.DateOfBirth" class="form-control" />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="NewUser.Avatar"></label>
                        <input asp-for="NewUser.Avatar" type="file" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="NewUser.SelectedRole">Role</label>
                        <select asp-for="NewUser.SelectedRole" asp-items="@Model.NewUser.AvailableRoles" class="form-control" required>
                            <option value="">-- Select a Role --</option>
                        </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn-secondary" id="cancelBtn">Cancel</button>
                    <button type="submit" class="btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- =================================================== -->
<!-- ================ EDIT USER MODAL ================== -->
<!-- =================================================== -->
<div id="editUserModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Edit User</h2>
            <span class="close-btn">&times;</span>
        </div>
        <!-- The body will be filled by JavaScript -->
        <div class="modal-body" id="editUserModalBody">
            <!-- Loading spinner while we fetch data -->
            <p>Loading...</p>
        </div>
    </div>
</div>
<div id="userDetailsModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>User Details</h2>
            <span class="close-btn">&times;</span>
        </div>
        <div class="modal-body" id="userDetailsModalBody">
            <!-- Content will be loaded here -->
        </div>
    </div>
</div>
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            // ===================================================
            // ============= ADD NEW USER MODAL LOGIC ============
            // ===================================================
            const addUserModal = document.getElementById('addUserModal');
            const addUserBtn = document.getElementById('addUserBtn');

            if (addUserBtn) {
                addUserBtn.addEventListener('click', () => {
                    addUserModal.style.display = 'block';
                });
            }

            // Check if the controller told us to show the modal (e.g., due to a validation error on submit)
            // The C# value is rendered inside JavaScript string quotes
            var showAddModal = '@ViewData["ShowModal"]';
            if (showAddModal === 'True') {
                addUserModal.style.display = 'block';
            }


            // ===================================================
            // =============== EDIT USER MODAL LOGIC =============
            // ===================================================
            const editUserModal = document.getElementById('editUserModal');
            const editUserModalBody = document.getElementById('editUserModalBody');
            const editButtons = document.querySelectorAll('.edit-user-btn');

            editButtons.forEach(button => {
                button.addEventListener('click', function (e) {
                    e.preventDefault();
                    const userId = this.getAttribute('data-id');

                    // Show the modal with a loading state first
                    editUserModalBody.innerHTML = '<p style="text-align:center; padding: 2rem;">Loading...</p>';
                    editUserModal.style.display = 'block';

                    // Fetch the form content from our controller action
                    fetch(`/Home/GetUserForEdit?id=${userId}`)
                        .then(response => {
                            if (!response.ok) {
                                throw new Error('Network response was not ok');
                            }
                            return response.text();
                        })
                        .then(html => {
                            // Inject the returned partial view HTML into the modal body
                            editUserModalBody.innerHTML = html;

                            // After the new form is loaded, we MUST find its specific cancel button
                            // and attach a new event listener to it.
                            const newCancelButton = editUserModalBody.querySelector('[data-dismiss="modal"]');
                            if (newCancelButton) {
                                newCancelButton.addEventListener('click', () => {
                                    editUserModal.style.display = 'none';
                                });
                            }
                        })
                        .catch(error => {
                            editUserModalBody.innerHTML = '<p style="text-align:center; padding: 2rem; color: red;">Error loading data. Please try again.</p>';
                            console.error('Error fetching user data:', error);
                        });
                });
            });


            // ===================================================
            // ============= DELETE USER LOGIC ===================
            // ===================================================
            const deleteButtons = document.querySelectorAll('.delete-btn');

          


            // ===================================================
            // =========== GENERAL MODAL CONTROLS ================
            // ===================================================
            const allModals = document.querySelectorAll('.modal');

            allModals.forEach(modal => {
                // Find the close button (the '×' in the header)
                const closeBtn = modal.querySelector('.close-btn');
                if(closeBtn) {
                     closeBtn.addEventListener('click', () => {
                         modal.style.display = 'none';
                     });
                }

                // Find any button with [data-dismiss="modal"] (like the "Cancel" button in the Add modal)
                const cancelButtons = modal.querySelectorAll('[data-dismiss="modal"]');
                cancelButtons.forEach(btn => {
                    btn.addEventListener('click', () => {
                        modal.style.display = 'none';
                    });
                });
            });

            // Add a single event listener to the window to handle clicking outside any modal
            window.addEventListener('click', function (event) {
                allModals.forEach(modal => {
                    if (event.target == modal) {
                        modal.style.display = 'none';
                    }
                });
            });

        });
        const userDetailsModal = document.getElementById('userDetailsModal');
        const userDetailsModalBody = document.getElementById('userDetailsModalBody');
        const detailButtons = document.querySelectorAll('.details-user-btn');

        detailButtons.forEach(button => {
            button.addEventListener('click', function (e) {
                e.preventDefault();
                const userId = this.getAttribute('data-id');

                userDetailsModalBody.innerHTML = '<p>Loading...</p>';
                userDetailsModal.style.display = 'block';

                fetch(`/Home/GetUserDetails?id=${userId}`)
                    .then(response => response.text())
                    .then(html => {
                        userDetailsModalBody.innerHTML = html;
                        const newCancelButton = userDetailsModalBody.querySelector('[data-dismiss="modal"]');
                        if (newCancelButton) {
                            newCancelButton.addEventListener('click', () => {
                                userDetailsModal.style.display = 'none';
                            });
                        }
                    });
            });
        });
    </script>
}