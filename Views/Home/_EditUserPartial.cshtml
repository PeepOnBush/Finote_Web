@model Finote_Web.ViewModels.EditUserViewModel

<form asp-action="UpdateUser" asp-controller="Home" method="post" enctype="multipart/form-data">
    <!-- This hidden field is crucial for telling the server which user to update -->
    <input type="hidden" asp-for="Id" />

    <!-- Display username and email as read-only -->
    <div class="form-row">
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" readonly />
        </div>
    </div>

    <!-- Password fields (optional) -->
    <div class="form-row">
        <div class="form-group">
            <label asp-for="NewPassword"></label>
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmNewPassword"></label>
            <input asp-for="ConfirmNewPassword" class="form-control" />
            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
        </div>
    </div>

    <!-- Other editable fields -->
    <div class="form-row">
        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" required />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
    </div>

    <!-- ... continue for Gender, DateOfBirth, Avatar, Role ... -->
    <div class="form-row">
        <div class="form-group">
            <label asp-for="Avatar"></label>
            <input asp-for="Avatar" type="file" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="SelectedRole">Role</label>
            <select asp-for="SelectedRole" asp-items="@Model.AvailableRoles" class="form-control" required>
                <option value="">-- Select a Role --</option>
            </select>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn-primary">Save Changes</button>
    </div>
</form>